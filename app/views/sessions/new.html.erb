<div class="container">
  <div class="row">
    <div>
      <h1 class="text-center">ログイン</h1>
        <%= form_for :session, url: login_path do |f| %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <%= f.submit "ログイン", class: 'btn-block ' %>
        <% end %>
      </div>
    </div>
  </div>
</div>